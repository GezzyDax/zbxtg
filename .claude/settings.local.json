{
  "permissions": {
    "allow": [
      "Bash(chmod:*)",
      "Bash(pip install:*)",
      "Bash(python:*)",
      "Bash(source:*)",
      "Bash(grep:*)",
      "Bash(sudo systemctl start:*)",
      "Bash(systemctl:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(sudo docker-compose:*)",
      "Bash(git init:*)",
      "Bash(git add:*)"
    ],
    "defaultMode": "acceptEdits",
    "additionalDirectories": [
      "/etc/ca-certificates/extracted",
      "/ca-certificates/extracted"
    ]
  }
}